
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TimeSheet</title>
</head>
<body>
    <h3>Please fill out at the END of every shift.</h3>
    <div> 
        <p> How many hours it take to complete your route today?</p>
        @using (Html.BeginForm())
        {
            <p>
                Total Hours: @Html.TextBox("HoursWorked")
                <input type="submit" class="btn btn-default" value="Submit" />
            </p>
        }

    </div>
</body>
</html>
