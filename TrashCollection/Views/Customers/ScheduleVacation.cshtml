@model TrashCollection.Models.TrashCollector.Customer
@{
    ViewBag.Title = "Schedule Vacation Time";
}
<h2>@ViewBag.Title</h2>
<h4>@ViewBag.Message</h4>
<br />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FirstName);
    @Html.HiddenFor(model => model.LastName);
    @Html.HiddenFor(model => model.PhoneNumber);
    @Html.HiddenFor(model => model.EmailAddress);
    @Html.HiddenFor(model => model.Street);
    @Html.HiddenFor(model => model.City);
    @Html.HiddenFor(model => model.State);
    @Html.HiddenFor(model => model.ZipCode);
    @Html.HiddenFor(model => model.UserId);
    @Html.HiddenFor(model => model.PickUpDay);

    <div class="form-group">
        @Html.LabelFor(m => m.VacationStart, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.EditorFor(m => m.VacationStart, new { htmlAttributes = new { @class = "form-control", @id = "date-picker" } })
            @Html.ValidationMessageFor(m => m.VacationStart, "", new { @class = "text-danger" })
        </div>
    </div>

  
     <div class="form-group">
                @Html.LabelFor(m => m.VacationEnd, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-4">
                    @Html.EditorFor(m => m.VacationEnd, new { htmlAttributes = new { @class = "form-control", @id = "date-picker2" } })
                    @Html.ValidationMessageFor(m => m.VacationEnd, "", new { @class = "text-danger" })
                </div>
            </div>
 

<div class="form-group">

        <div class="col-md-offset-2">
        <input type="submit" class="btn btn-default" value="Schedule Time Off" />
        </div>

</div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="http://code.jquery.com/jquery-3.3.1.js"
        integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>
<script src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"
        integrity="sha256-T0Vest3yCU7pafRw9r+settMBX6JkKN06dqBnpQ8d30="
        crossorigin="anonymous"></script>
<script type='text/javascript'>

    $('#date-picker').datepicker();
    $('#date-picker2').datepicker();

</script>
